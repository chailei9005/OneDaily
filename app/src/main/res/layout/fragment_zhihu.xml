<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/spl_zhihu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_zhihu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

    </android.support.v4.widget.SwipeRefreshLayout>

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/zhihu_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">
            <ImageView
                android:id="@+id/img_zhihu_empty"
                style="@style/empty_image"
                android:src="@drawable/ic_moren"/>

            <TextView
                android:id="@+id/tv_book_empty_refresh"
                style="@style/empty_refresh"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/zhihu_loading"
            android:layout_width="@dimen/content_load"
            android:layout_height="@dimen/content_load"
            android:background="@drawable/smart_ui_loading_animation"
            android:visibility="gone"/>

    </FrameLayout>

</LinearLayout>